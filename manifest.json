{
  "manifest_version": 3,
  "name": "Accessibility Text Enhancer",
  "version": "1.0.0",
  "description": "Real-time, user-driven web accessibility enhancement tool with intelligent text modifications and personalization.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Accessibility Text Enhancer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      }
    },
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle extension on/off"
    },
    "increase-size": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Undo Change"
    },
    "decrease-size": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Redo Change"
    }
  }
}